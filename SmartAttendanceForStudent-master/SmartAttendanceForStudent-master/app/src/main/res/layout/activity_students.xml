<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#514363"
    android:id="@+id/linlay"
    tools:context=".Students">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Students of"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"
        android:id="@+id/studentsTV"
        android:textColor="#ffffff"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.1"
        >

        <ProgressBar
            android:id="@+id/pBarInStudents"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/listViewForMemberInStudentActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="horizontal">

        <Button
            android:text="Mark my attendace"
            android:id="@+id/recordAttendance"
            android:onClick="markAttendance"
            android:background="#BF360C"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/checkAttendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7DC6F"
            android:layout_weight="1"
            android:onClick="checkAttendance"
            android:text="Check my attendance"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>